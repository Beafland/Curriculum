<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_courses_Toolbar"
        android:layout_width="match_parent"
        android:background="#A09AB4"
        app:titleTextColor="@android:color/white"
        app:title="Add course"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AlertDialog.AppCompat.Light">
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/shadow1"
        android:layout_width="match_parent"
        android:layout_height="4dp">
    </View>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:text="\Course Name:" />

                <EditText
                    android:id="@+id/course_name"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:imeOptions="actionNext"
                    android:singleLine="true" />
            </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\nBeginning Week:" />
            <EditText
                android:id="@+id/week"
                android:layout_width="110dp"
                android:maxLength="2"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\nStarting time:" />
            <EditText
                android:id="@+id/classes_begin"
                android:layout_width="50dp"
                android:maxLength="2"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\nEnding time:" />
            <EditText
                android:id="@+id/classes_ends"
                android:layout_width="50dp"
                android:maxLength="2"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:inputType="number" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\nTeacher's name:" />
            <EditText
                android:id="@+id/teacher_name"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:imeOptions="actionNext"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="\nLocation:" />
            <EditText
                android:id="@+id/class_room"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:imeOptions="actionNext"
                android:singleLine="true" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
